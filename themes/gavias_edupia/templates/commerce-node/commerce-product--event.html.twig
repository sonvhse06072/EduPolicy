{#
/**
 * @file
 *
 * Default product template.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper.
 * - product: The rendered product fields.
 *   Use 'product' to print them all, or print a subset such as
 *   'product.title'. Use the following code to exclude the
 *   printing of a given field:
 *   @code
 *   {{ product|without('title') }}
 *   @endcode
 * - product_entity: The product entity.
 * - product_url: The product URL.
 *
 * @ingroup themeable
 */
#}

<article{{ attributes}}>
  <div class="single-course">
    <div class="single-course-top">
      <div class="container">
        <div class="row">

          <div class="col-xl-8 col-lg-8 col-md-12 col-xs-12 align-self-center">
            <h1 {{ title_attributes.addClass('post-title') }}>{{ product.title }}</h1>
            <div class="headline mb-3">{{ product.field_event_address }}</div>
            <div class="what-learn">{{ product.field_event_start }}</div>
          </div>

          <div class="col-xl-4 col-lg-4 col-md-12 col-xs-12 align-self-end color-white">
            <div class="event-type mb-3">
              {{ product.field_event_type }}
            </div>
            <div class="event-format">
              {{ product.field_event_format }}
            </div>
          </div>

        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-xl-8 col-lg-8 col-md-12 col-xs-12 course-left">
          <div class="course-content">

            <div class="post-content block-course-info">
              <div class="block-content">
                {{ product.field_full_content }}
              </div>
            </div>
          </div>

          {% if product.field_event_comment|render %}
            <div class="block-course-info">
              <h2 class="block-title">{{'Comment'|t}}</h2>
              <div id="node-single-comment">
                <div class="block-content">
                  {{ product.field_event_comment }}
                </div>
              </div>
            </div>
          {% endif %}

        </div>
        <div class="col-xl-4 col-lg-4 col-md-12 col-xs-12 course-right">

          <div class="course-right-content clearfix">
            <div class="course-right-inner">
              <div class="add-to-cart-content-inner">
                {{product.variation_price|raw}}
                {{product.variations|raw}}
              </div>

              <div class="course-meta course-information clearfix">
                <div class="block-course-title">{{'Information Of Event'|t}}</div>

                {% if product.field_event_address %}
                  <div class="meta-item">
                    <div class="content">
                      <div class="lab">{{ 'Address'|t }}</div>
                      <div class="val">{{ product.field_event_address }}</div>
                    </div>
                  </div>
                {% endif %}

                {% if product.field_event_start %}
                  <div class="meta-item">
                    <div class="content">
                      <div class="lab">{{ 'Time'|t }}</div>
                      <div class="val">{{ product.field_event_start }}</div>
                    </div>
                  </div>
                {% endif %}

                {% if product.field_event_type %}
                  <div class="meta-item">
                    <div class="content">
                      <div class="lab">{{ 'Event Type'|t }}</div>
                      <div class="val">{{ product.field_event_type }}</div>
                    </div>
                  </div>
                {% endif %}

                {% if product.field_event_format %}
                  <div class="meta-item">
                    <div class="content">
                      <div class="lab">{{ 'Format'|t }}</div>
                      <div class="val">{{ product.field_event_format }}</div>
                    </div>
                  </div>
                {% endif %}

                {% if product.variation_price %}
                  <div class="meta-item">
                    <div class="content">
                      <div class="lab">{{ 'Price'|t }}</div>
                      <div class="val">
                        {{ product.variation_price }}
                      </div>
                    </div>
                  </div>
                {% endif %}
              </div>

              <div class="course-sharing">
                <a data-toggle="tooltip" data-placement="left" data-animation="true"  data-original-title="Facebook" href="http://www.facebook.com/sharer.php?s=100&p&#91;url&#93;={{base_url}}{{product_url}}&p&#91;title&#93;={{title}}" target="_blank">
                  <i class="fab fa-facebook"></i>
                </a>
                <a data-toggle="tooltip" data-placement="left" data-animation="true"  data-original-title="Twitter" href="https://twitter.com/intent/tweet?text={{title}}&url={{base_url}}{{product_url}}" target="_blank">
                  <i class="fab fa-twitter"></i>
                </a>
                <a data-toggle="tooltip" data-placement="left" data-animation="true"  data-original-title="LinkedIn" href="http://linkedin.com/shareArticle?mini=true&amp;url={{base_url}}{{product_url}}&amp;title={{title}}" target="_blank">
                  <i class="fab fa-linkedin"></i>
                </a>
                <a data-toggle="tooltip" data-placement="left" data-animation="true"  data-original-title="Email" href="mailto:?subject={{title}}&amp;body={{base_url}}{{product_url}}">
                  <i class="fa fa-envelope-open"></i>
                </a>
              </div>

            </div>

          </div>

          {% if gva_drupal_region('sidebar_course') %}
            <div class="sidebar sidebar_course">
              <div class="content-inner">{{ gva_drupal_region('sidebar_course') }}</div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>


  </div>
</article>
